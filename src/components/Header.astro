---
export interface Props {
  isHome?: boolean;
}

const { isHome = false } = Astro.props;
---

<header>
  <nav class={`${!isHome ? 'white-bg' : 'home-menu'} main-menu`}>
    <div class="menu-main-container">
      <ul id="menu-main">
        <a href="/" data-i18n="nav.about">About</a>
        <a href="/portfolio" data-i18n="nav.portfolio">Portfolio</a>
        <a href="/press" data-i18n="nav.press">Press</a>
        <a href="/contact" data-i18n="nav.contact">Contact</a>
      </ul>
    </div>
    <a href="/"
      ><img class="logo-img" src="/images/lefferts-logo.svg" alt="Lefferts logo" /></a
    >
    <div class="lang-switcher">
      <button class="lang-toggle" aria-label="Select language">
        <svg class="lang-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="2" y1="12" x2="22" y2="12"></line>
          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
        </svg>
        <span class="lang-current">EN</span>
        <svg class="lang-chevron" xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </button>
      <div class="lang-dropdown">
        <button class="lang-btn active" data-lang="en">English</button>
        <button class="lang-btn" data-lang="es">Español</button>
        <button class="lang-btn" data-lang="pt-br">Português</button>
      </div>
    </div>
  </nav>

  <nav class="mobile-menu">
    <div class="hamburger" id="hamburger-1">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>
    <a href="/"
      ><img class="logo-img" src="/images/lefferts-logo.svg" alt="Lefferts logo" /></a
    >
  </nav>

  <div class="mobile-items">
    <ul>
      <a href="/" data-i18n="nav.about">About</a>
      <a href="/portfolio" data-i18n="nav.portfolio">Portfolio</a>
      <a href="/press" data-i18n="nav.press">Press</a>
      <a href="/contact" data-i18n="nav.contact">Contact</a>
    </ul>
    <div class="mobile-lang-switcher">
      <button class="lang-btn" data-lang="en">EN</button>
      <span class="lang-divider">|</span>
      <button class="lang-btn" data-lang="es">ES</button>
      <span class="lang-divider">|</span>
      <button class="lang-btn" data-lang="pt-br">PT</button>
    </div>
  </div>
</header>
