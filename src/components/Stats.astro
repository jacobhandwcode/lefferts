---
const stats = [
  {
    number: "3",
    suffix: "Million",
    prefix: "+",
    description: "GROSS SQUARE FEET OF DESTINATION DEVELOPMENTS",
    className: "mil",
    i18nSuffix: "stats.million",
    i18nDesc: "stats.sqft"
  },
  {
    number: "25",
    suffix: "",
    prefix: "",
    description: "YEARS OF EXPERIENCE",
    className: "",
    i18nSuffix: "",
    i18nDesc: "stats.years"
  },
  {
    number: "1.5",
    suffix: "Billion",
    prefix: "",
    description: "IN REAL ESTATE INVESTMENTS",
    className: "bil",
    i18nSuffix: "stats.billion",
    i18nDesc: "stats.investments"
  }
];
---

<div class="stats">
  {stats.map((stat) => (
    <div class="statistic" data-module="countup">
      <h3 class={stat.className} data-countup-number={stat.number}>
        {stat.number}
      </h3>
      <p data-i18n={stat.i18nDesc}>{stat.description}</p>
    </div>
  ))}
</div>
